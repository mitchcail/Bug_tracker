<div class="container">

    <h1>Viewing all tickets</h1>
    <% @tickets.each do | ticket |%>

         <div class="divider"></div>
         <br>

        <div class="row">
            <div class="col s12 m8 l8">
              <div class="card blue-grey darken-1 hoverable">
                <div class="card-content white-text">
                  <span class="card-title"><%=ticket.name %></span>
                  <p><%=ticket.description %></p>
                </div>
                <div class="card-action">
                  <%= link_to "view", ticket %>
                  <% if user_signed_in? %>
                    <%= link_to "hunt", subscribe_to_hunt_path(ticket_id: ticket.id) %>
                  <%end%>
                </div>
              </div>
            </div>
          </div>

    <% end%>



</div>