<div class="container">
	<h1><%= @ticket.name %></h1>
	<div class="row">
      <div class="col s12 m10">
        <div class="card-panel blue" style="background-color: #00BCD4 !important">
          <span class="white-text"><h6 class="flow-text"><%= @ticket.description %>
          </h6></span>
        </div>
      </div>
    </div>
    <br>
    <% if user_signed_in? %>
    	<% if current_user.hunts.exists?(user_id: current_user.id) %>
    		<h5>You are the creator of this ticket </h5>
    		<br>
    		<br>
    		<br>

            <h5>you have <%= @hunters.size %> people hunting this ticket</h5>
    		<ul class="collection">
                <% @hunters.each do |user| %>
    		      <li class="collection-item"><%= User.find(user.user_id).email %></li>
                <% end %>
		    </ul>
    	<% elsif current_user.hunts.exists?(ticket_id: @ticket.id)%>
    		<h5> You have signed up for this </h5>
    	<% else %>

        <%= button_to "hunt", subscribe_to_hunt_path(ticket_id: @ticket.id), class: "waves-effect waves-light btn-large", style: "background-color: #FF9800" %>
        <% end %>
    <%end%>
</div>